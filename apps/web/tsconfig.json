{
  "exclude": [
    "node_modules"
  ],
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "types": [
      "vitest/globals"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "typings",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "node_modules/eslint-plugin-react/lib/types.d.ts",
    ".next/types/**/*.ts"
  ]
}
